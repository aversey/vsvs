#!/bin/bash
res=""
buf=""
while IFS="" read str
do
    if [ -z "${str##* *}" ]
    then
        key="${str%% *}"
        val="${str#* }"
    else
        key="${str}"
        val=""
    fi
    if [ -z "${key}" ]
    then
        buf="${buf}"$'\n'"${val}"
    else
        if [ -n "${buf}" ]
        then
            res="${res}$(echo -n "${buf}" | $1)"
        fi
        buf="${val}"
    fi
done
if [ -n "${buf}" ]
then
    res="${res}$(echo -n "${buf}" | $1)"
fi
echo -n "${res}"
